pipeline {
    agent any

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Mahithamaganti/registration-project.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                echo "Installing project dependencies..."
                
            }
        }

        stage('Build') {
            steps {
                echo "Building Registration Module..."
               
            }
        }

        stage('Test') {
            steps {
                echo "Running tests..."
               
            }
        }

        stage('Deploy') {
            when {
                branch 'main'
            }
            steps {
                echo "Deploying Registration Module..."
                
            }
        }
    }

    post {
        success {
            echo "Pipeline executed successfully!"
        }
        failure {
            echo "Pipeline failed. Check logs."
        }
    }
}
